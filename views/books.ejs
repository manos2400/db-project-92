<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no">
  <title>Books</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css">
  <link rel="stylesheet" href="/css/Customizable-Background--Overlay.css">
  <link rel="stylesheet" href="/css/Data-Table-styles.css">
  <link rel="stylesheet" href="/css/Data-Table.css">
  <link rel="stylesheet" href="/css/Footer-Dark-icons.css">
  <link rel="stylesheet" href="https://cdn.datatables.net/1.10.15/css/dataTables.bootstrap.min.css">
  <link rel="stylesheet" href="/css/Login-Form-Basic-icons.css">
  <link rel="stylesheet" href="/css/Profile-with-data-and-skills.css">
  <link rel="stylesheet" href="/css/Soft-UI-Aside-Navbar.css">
  <link rel="stylesheet" href="/css/dropdown.css">
  <link rel="stylesheet" href="/css/dialog.css">
  <link rel="icon" type="image/x-icon" href="/img/favicon.ico">
  <script src="https://unpkg.com/axios@1.4.0"></script>
  <script src="https://unpkg.com/vue@next"></script>
<body>
  <%- include("includes/navbar.ejs") %>
  <div class="container" id="app">
    <div class="main-body">
        <div class="books">
        <% books.forEach(book => {%>
            <div class="book">
                <img src="<%=book.picture%>" @click="getBookData(<%=book.id%>)" width="218" height="333"/>        
            </div>
        <%}) %>
        </div>
    </div>
    <div v-if="book" v-bind:class="panelClass">
        <div class="dialog">
          <div class="main-body">
            <button class="btn-close" type="button" aria-label="Close" @click="closeDialog" style="margin-bottom: 7px;"></button>
            <nav aria-label="breadcrumb" class="main-breadcrumb"></nav>
            <div class="row gutters-sm">
                <div class="col-md-4 mb-3">
                    <div class="card">
                        <div class="card-body">
                            <div class="text-center d-flex flex-column align-items-center"><img v-bind:src="book.picture" alt="Admin" width="163" height="250">
                                <div class="mt-3">
                                    <h4>{{ book.title }}</h4>
                                    <p class="text-secondary mb-1">{{ book. description }}</p>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="card mt-3">
                        <ul class="list-group list-group-flush list-group-flush"></ul>
                    </div>
                </div>
                <div class="col-md-8">
                    <div class="card mb-3">
                        <div class="card-body">
                            <div class="row">
                                <div class="col-sm-3">
                                    <h6 class="mb-0">Title</h6>
                                </div>
                                <div class="col-sm-9 text-secondary"><span>{{ book.title }}</span></div>
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-sm-3">
                                    <h6 class="mb-0">Authors</h6>
                                </div>
                                <div class="col-sm-9 text-secondary"><span>{{ book.authors }}</span></div>
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-sm-3">
                                    <h6 class="mb-0">Publisher</h6>
                                </div>
                                <div class="col-sm-9 text-secondary"><span>{{ book.publisher }}</span></div>
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-sm-3">
                                    <h6 class="mb-0">ISBN</h6>
                                </div>
                                <div class="col-sm-9 text-secondary"><span>{{ book.isbn }}</span></div>
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-sm-3">
                                    <h6 class="mb-0">Pages</h6>
                                </div>
                                <div class="col-sm-9 text-secondary"><span>{{ book.pages }}</span></div>
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col">
                                    <h6 class="mb-0">Language</h6>
                                </div>
                                <div class="col-sm-9 text-secondary"><span>{{ book.language }}</span></div>
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-sm-3">
                                    <h6 class="mb-0">Categories</h6>
                                </div>
                                <div class="col-sm-9 text-secondary"><span>{{ book.categories }}</span></div>
                            </div>
                        </div>
                    </div>
                    <div class="row gutters-sm">
                            <div class="card mb-3">
                                <div class="card-body" style="margin-bottom: -31px;">
                                    <h6 class="d-flex align-items-center mb-3"><svg xmlns="http://www.w3.org/2000/svg" viewBox="0 -64 640 640" width="1em" height="1em" fill="currentColor" class="text-info mr-2" style="font-size: 20px;--bs-info-rgb: 235, 128, 52;">
                                            <path d="M320 128C328.8 128 336 135.2 336 144V160H352C360.8 160 368 167.2 368 176C368 184.8 360.8 192 352 192H320C311.2 192 304 184.8 304 176V144C304 135.2 311.2 128 320 128zM476.8 98.06L602.4 125.1C624.4 130.9 640 150.3 640 172.8V464C640 490.5 618.5 512 592 512H48C21.49 512 0 490.5 0 464V172.8C0 150.3 15.63 130.9 37.59 125.1L163.2 98.06L302.2 5.374C312.1-1.791 327-1.791 337.8 5.374L476.8 98.06zM256 512H384V416C384 380.7 355.3 352 320 352C284.7 352 256 380.7 256 416V512zM96 192C87.16 192 80 199.2 80 208V272C80 280.8 87.16 288 96 288H128C136.8 288 144 280.8 144 272V208C144 199.2 136.8 192 128 192H96zM496 272C496 280.8 503.2 288 512 288H544C552.8 288 560 280.8 560 272V208C560 199.2 552.8 192 544 192H512C503.2 192 496 199.2 496 208V272zM96 320C87.16 320 80 327.2 80 336V400C80 408.8 87.16 416 96 416H128C136.8 416 144 408.8 144 400V336C144 327.2 136.8 320 128 320H96zM496 400C496 408.8 503.2 416 512 416H544C552.8 416 560 408.8 560 400V336C560 327.2 552.8 320 544 320H512C503.2 320 496 327.2 496 336V400zM320 88C271.4 88 232 127.4 232 176C232 224.6 271.4 264 320 264C368.6 264 408 224.6 408 176C408 127.4 368.6 88 320 88z"></path>
                                        </svg>&nbsp; Reserve this book</h6>
                                </div>
                                <div class="card-body">
                                    <div class="row">
                                        <div class="col-sm-3 col-xxl-3">
                                            <h6 class="mb-0">Total Quantity</h6>
                                        </div>
                                        <div class="col-sm-9 col-xxl-7 text-secondary"><span>{{ book.quantity }}</span></div>
                                    </div>
                                    <hr>
                                    <div class="row">
                                        <div class="col-sm-3 col-xxl-3">
                                            <h6 class="mb-0">Available Copies</h6>
                                        </div>
                                        <div class="col-sm-9 col-xxl-7 text-secondary"><span>{{ book.available }}</span></div>
                                    </div>
                                    <hr>
                                    <div class="row">
                                        <p v-if="message">{{ message }}</p>
                                        <div class="col align-items-center"><a class="btn btn-primary ms-md-2" role="button" @click="reserveBook(book.id)" style="--bs-btn-bg: #fd800d;--bs-btn-border-color: #fd800d;--bs-btn-hover-color: #fff;--bs-btn-hover-bg: #d7610b;--bs-btn-hover-border-color: #ca4f0a;">Reserve</a></div>
                                    </div>
                                </div>
                            </div>
                    </div>
                </div>
            </div>
        </div>
        </div>
      </div>
    </div>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    const app = Vue.createApp({
        data() {
        return {
            book: null,
            panelClass: "dialog-container hidden",
            message: null
        };
      },
      methods: {
        getBookData(id) {
          // Handle form submission logic here
          axios.get(`http://localhost:3000/books/${id}`)
            .then(response => {
              // Handle success
              this.book = response.data;
              this.panelClass = "dialog-container";
            })
            .catch(error => {
              console.error('Error:', error);
            });
        },
        closeDialog() {
            this.panelClass = "dialog-container hidden";
            this.book = null;
            this.message = null;
        },
        reserveBook(id) {
          // Handle form submission logic here
          axios.post(`http://localhost:3000/books/reserve/${id}`)
            .then(response => {
              // Handle success
                this.message = response.data;
            })
            .catch(error => {
                this.message = error.response.data;
            });
        }
      }
    });

    app.mount('#app');
  </script>
</body>

</html>