<!DOCTYPE html>
<html>

<head>
  <title>Books</title>
  <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap" />
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css" />
  <style>
    body {
      background-color: #303030;
      color: #fff;
      font-family: 'Roboto', sans-serif;
    }

    h1 {
      margin-top: 30px;
    }

    .grid-container {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
      gap: 20px;
      margin-top: 20px;
    }

    ul {
      padding: 0;
    }

    li {
      list-style-type: none;
      cursor: pointer;
    }

    h2 {
      font-size: 24px;
      margin-bottom: 5px;
    }

    .book-details {
      display: none;
    }

    p {
      margin: 5px 0;
    }

    img {
      max-width: 100%;
      margin-top: 10px;
    }
  </style>
</head>

<body>
  <div id="root" style="text-align:center;">
    <h1>Books Available in Your School</h1>
    <div class="grid-container">
      <% books.forEach(book => { %>
      <li>
        <img src="<%= book.picture %>" alt="Book Cover" />
        <div class="book-details">
          <h2><%= book.title %></h2>
          <p><strong>Publisher:</strong> <%= book.publisher %></p>
          <p><strong>ISBN:</strong> <%= book.isbn %></p>
          <p><strong>Pages:</strong> <%= book.pages %></p>
          <p><strong>Description:</strong> <%= book.description %></p>
          <p><strong>Language:</strong> <%= book.language %></p>
          <p><strong>Keywords:</strong> <%= book.keywords %></p>
          <p><strong>Category:</strong> <%= book.category_id %></p>
        </div>
      </li>
      <% }); %>
    </div>
  </div>

  <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
  <script>
    document.addEventListener('DOMContentLoaded', function() {
      const bookDetails = document.getElementsByClassName('book-details');
      const bookCovers = document.querySelectorAll('.grid-container li img');

      for (let i = 0; i < bookCovers.length; i++) {
        bookCovers[i].addEventListener('click', function() {
          bookDetails[i].style.display = bookDetails[i].style.display === 'none' ? 'block' : 'none';
        });
      }
    });
  </script>
</body>

</html>