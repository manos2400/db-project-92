<div v-bind:class="createPanel">
    <div class="dialog">
      <div class="main-body">
        <button class="btn-close" type="button" aria-label="Close" @click="closeDialog('create')" style="margin-bottom: 7px;"></button>
        <br>
        <div class="row justify-content-around">
          <div class="col-md mb-3">
            <div class="row">
              <div class="col-sm-4">
                <h6>Name</h6>
              </div>
              <input class="field" type="text" v-model="name" />
            </div>
            <div class="row">
              <div class="col-sm-4">
                <h6>Address</h6>
              </div>
              <input class="field" type="text" v-model="address" />
            </div>
            <div class="row">
              <div class="col-sm-4">
                <h6>City</h6>
              </div>
              <input class="field" type="text" v-model="city" />
            </div>
          </div>
          <div class="col-md mb-3">
            <div class="row">
              <div class="col-sm-4">
                <h6>Phone</h6>
              </div>
              <input class="field" type="email" v-model="phone_number" />
            </div>
            <div class="row">
              <div class="col-sm-4">
                <h6>Email</h6>
              </div>
              <input class="field" type="email" v-model="email" />
            </div>
            <div class="row">
                <div class="col-sm-4">
                  <h6>Principal</h6>
                </div>
                <input class="field" type="email" v-model="principal_name" />
              </div>
          </div>
          <div class="row">
            <div class="col-sm-12">
              <button class="btn btn-primary" @click="createSchool()">Submit</button>
            </div>
          </div>
        </div>
        <br>
        <div class="row">
          <span>{{ message }}</span>
          <span v-if="message === 'School created successfully.'" class="text-secondary">Don't forget to create a manager for the new school!</span>
        </div>
      </div>
    </div>
  </div>