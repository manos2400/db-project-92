<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no">
  <title>Loans</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/material-design-icons/3.0.1/iconfont/material-icons.min.css">
  <link rel="stylesheet" href="/css/Customizable-Background--Overlay.css">
  <link rel="stylesheet" href="/css/Data-Table-styles.css">
  <link rel="stylesheet" href="/css/Data-Table.css">
  <link rel="stylesheet" href="/css/Footer-Dark-icons.css">
  <link rel="stylesheet" href="https://cdn.datatables.net/1.10.15/css/dataTables.bootstrap.min.css">
  <link rel="stylesheet" href="/css/Login-Form-Basic-icons.css">
  <link rel="stylesheet" href="/css/Soft-UI-Aside-Navbar.css">
  <link rel="stylesheet" href="/css/dropdown.css">
  <link rel="stylesheet" href="/css/input.css">
  <link rel="stylesheet" href="/css/buttons.css">
  <link rel="icon" type="image/x-icon" href="/img/favicon.ico">
  <script src="https://unpkg.com/axios@1.4.0"></script>
  <script src="https://unpkg.com/vue@next"></script>
</head>

<body>
  <%- include("includes/navbar.ejs") %>
  <div class="container py-4 py-xl-5">

    <br>
    <div id="app">
      <form @submit.prevent="search">
      <input type="text" v-model="searchTerm" class="input" @keyup.enter="search" placeholder="Search...">
    </form>
    </div>
    <br>
    <h4>Delayed Loans</h4>
    <table id="delayedLoans" class="table table-striped table-bordered">
      <thead>
        <tr>
          <th>User</th>
          <th>Book</th>
          <th>Date Out</th>
          <th>Date Due</th>
          <th>Date in</th>
          <th>Manage</th>
        </tr>
      </thead>
      <tbody>
        <% delayedLoans.forEach(book=> { %>
        <tr>
          <td><%= book.real_name %></td>
          <td><%= book.title %></td>
          <td>
            <%= book.date_out.toISOString().split("T")[0] %>
          </td>
          <td style="color:crimson">
            <%= book.date_due.toISOString().split("T")[0] %>
          </td>
          <td>-</td>
          <td>
            <form name="returnForm" method="POST" action="/loans/manage/return/<%=book.book_id%>/<%=book.user_id%>">
              <input type="hidden">
              <button class="btn btn-danger ms-md-2" role="button" type="submit" >Return</button>
            </form>
          </td>
          </tr>
        <% }); %>
      </tbody>
    </table>
    <h4>Loans</h4>
    <table id="loans" class="table table-striped table-bordered">
      <thead>
        <tr>
          <th>User</th>
          <th>Book</th>
          <th>Date Out</th>
          <th>Date Due</th>
          <th>Date in</th>
          <th>Manage</th>
        </tr>
      </thead>
      <tbody>
        <% loans.forEach(book=> { %>
        <tr>
          <td><%= book.real_name %></td>
          <td><%= book.title %></td>
          <td>
            <%= book.date_out.toISOString().split("T")[0] %>
          </td>
          <td>
            <%= book.date_due.toISOString().split("T")[0] %>
          </td>
          <td>-</td>
          <td>
            <form name="returnForm" method="POST" action="/loans/manage/return/<%=book.book_id%>/<%=book.user_id%>">
              <input type="hidden">
              <button class="btn btn-primary ms-md-2" role="button" type="submit" >Return</button>
            </form>
          </td>
          </tr>
        <% }); %>
      </tbody>
    </table>
    <h4>Returned Loans</h4>
    <table id="oldLoans" class="table table-striped table-bordered">
      <thead>
        <tr>
          <th>User</th>
          <th>Book</th>
          <th>Date Out</th>
          <th>Date Due</th>
          <th>Date in</th>
        </tr>
      </thead>
      <tbody>
        <% oldLoans.forEach(book=> { %>
        <tr >
          <td><%= book.real_name %></td>
          <td><%= book.title %></td>
          <td>
            <%= book.date_out.toISOString().split("T")[0] %>
          </td>
          <td>
            <%= book.date_due.toISOString().split("T")[0] %>
          </td>
          <td>
            <%= book.date_in.toISOString().split("T")[0]%>
          </td>
          </tr>
        <% }); %>
      </tbody>
    </table>
  </div>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    const app = Vue.createApp({
      data() {
        return {
        searchTerm: ''
        }
      },
      methods: {
        search() {
          const name = this.searchTerm.replace(' ', '%20');
          window.location.href = '/loans?name=' + name;
        }
      }
    });
    app.mount('#app')
  </script>
</body>

</html>