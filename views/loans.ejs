<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no">
  <title>Loans</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/material-design-icons/3.0.1/iconfont/material-icons.min.css">
  <link rel="stylesheet" href="/css/Customizable-Background--Overlay.css">
  <link rel="stylesheet" href="/css/Data-Table-styles.css">
  <link rel="stylesheet" href="/css/Data-Table.css">
  <link rel="stylesheet" href="/css/Footer-Dark-icons.css">
  <link rel="stylesheet" href="/css/Login-Form-Basic-icons.css">
  <link rel="stylesheet" href="/css/Soft-UI-Aside-Navbar.css">
  <link rel="stylesheet" href="/css/dropdown.css">
  <link rel="stylesheet" href="/css/input.css">
  <link rel="stylesheet" href="/css/buttons.css">
  <link rel="icon" type="image/x-icon" href="/img/favicon.ico">
  <script src="https://cdnjs.cloudflare.com/ajax/libs/axios/1.4.0/axios.min.js"></script>
  <script src="https://unpkg.com/vue@next"></script>
  <script src="https://code.jquery.com/jquery-3.7.0.slim.min.js" integrity="sha256-tG5mcZUtJsZvyKAxYLVXrmjKBVLd6VpVccqz/r4ypFE=" crossorigin="anonymous"></script>
  <script src="https://cdn.datatables.net/v/bs5/dt-1.13.4/datatables.min.js"></script>
  <link href="https://cdn.datatables.net/v/dt/dt-1.13.4/datatables.min.css" rel="stylesheet"/>
</head>

<body>
  <%- include("includes/navbar.ejs") %>
  <div class="container py-4 py-xl-5">

    <br>
    <div id="app">
      <form @submit.prevent="search">
      <input type="text" v-model="searchTerm" class="input" @keyup.enter="search" placeholder="Search...">
    </form>
    </div>
    <br>
    <h4>Delayed Loans</h4>
    <table id="delayedLoans" class="table table-striped ">
      <thead>
        <tr>
          <th>User</th>
          <th>Book</th>
          <th>Date Out</th>
          <th>Date Due</th>
          <th>Date in</th>
          <th>Manage</th>
        </tr>
      </thead>
      <tbody>
        <% delayedLoans.forEach(book=> { %>
        <tr>
          <td><%= book.real_name %></td>
          <td><%= book.title %></td>
          <td>
            <%= book.date_out.toISOString().split("T")[0] %>
          </td>
          <td style="color:crimson">
            <%= book.date_due.toISOString().split("T")[0] %>
          </td>
          <td>-</td>
          <td>
            <form name="returnForm" method="POST" action="/loans/manage/return/<%=book.book_id%>/<%=book.user_id%>">
              <input type="hidden">
              <button class="btn btn-danger ms-md-2" role="button" type="submit" >Return</button>
            </form>
          </td>
          </tr>
        <% }); %>
      </tbody>
    </table>
    <br>
    <h4>Loans</h4>
    <table id="loans" class="table table-striped ">
      <thead>
        <tr>
          <th>User</th>
          <th>Book</th>
          <th>Date Out</th>
          <th>Date Due</th>
          <th>Date in</th>
          <th>Manage</th>
        </tr>
      </thead>
      <tbody>
        <% loans.forEach(book=> { %>
        <tr>
          <td><%= book.real_name %></td>
          <td><%= book.title %></td>
          <td>
            <%= book.date_out.toISOString().split("T")[0] %>
          </td>
          <td>
            <%= book.date_due.toISOString().split("T")[0] %>
          </td>
          <td>-</td>
          <td>
            <form name="returnForm" method="POST" action="/loans/manage/return/<%=book.book_id%>/<%=book.user_id%>">
              <input type="hidden">
              <button class="btn btn-primary ms-md-2" role="button" type="submit" >Return</button>
            </form>
          </td>
          </tr>
        <% }); %>
      </tbody>
    </table>
    <br>
    <h4>Returned Loans</h4>
    <table id="oldLoans" class="table table-striped ">
      <thead>
        <tr>
          <th>User</th>
          <th>Book</th>
          <th>Date Out</th>
          <th>Date Due</th>
          <th>Date in</th>
        </tr>
      </thead>
      <tbody>
        <% oldLoans.forEach(book=> { %>
        <tr >
          <td><%= book.real_name %></td>
          <td><%= book.title %></td>
          <td>
            <%= book.date_out.toISOString().split("T")[0] %>
          </td>
          <td>
            <%= book.date_due.toISOString().split("T")[0] %>
          </td>
          <td>
            <%= book.date_in.toISOString().split("T")[0]%>
          </td>
          </tr>
        <% }); %>
      </tbody>
    </table>
      <a class="btn btn-primary floating-button" href="/loans/manage/create">
        <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" fill="currentColor" viewBox="0 0 16 16">
          <path d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4z" />
        </svg>
      </a>
      </div>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    const app = Vue.createApp({
      data() {
        return {
        searchTerm: ''
        }
      },
      methods: {
        search() {
          const name = this.searchTerm.replace(' ', '%20');
          window.location.href = '/loans?name=' + name;
        }
      }
    });
    app.mount('#app')
    $(document).ready(function() {
      $('#delayedLoans').DataTable({
        paging: false,
        searching: false,
        info: false,
        columnDefs: [
          { "width": "26%", "targets": 0 },
          { "width": "30%", "targets": 1 },
          { "width": "11%", "targets": 2 },
          { "width": "11%", "targets": 3 },
          { "width": "11%", "targets": 4 },
          { "width": "11%", "targets": 5 }
        ]
      });
      $('#loans').DataTable({
        paging: false,
        searching: false,
        info: false,
        columnDefs: [
          { "width": "26%", "targets": 0 },
          { "width": "30%", "targets": 1 },
          { "width": "11%", "targets": 2 },
          { "width": "11%", "targets": 3 },
          { "width": "11%", "targets": 4 },
          { "width": "11%", "targets": 5 }
        ]
      });
      $('#oldLoans').DataTable({
        paging: false,
        searching: false,
        info: false,
        columnDefs: [
          { "width": "26%", "targets": 0 },
          { "width": "30%", "targets": 1 },
          { "width": "11%", "targets": 2 },
          { "width": "11%", "targets": 3 },
          { "width": "22%", "targets": 4 }
        ]
      });
    });
  </script>
</body>

</html>