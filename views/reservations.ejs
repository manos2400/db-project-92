<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no">
  <title>Reservations</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/material-design-icons/3.0.1/iconfont/material-icons.min.css">
  <link rel="stylesheet" href="/css/Customizable-Background--Overlay.css">
  <link rel="stylesheet" href="/css/Data-Table-styles.css">
  <link rel="stylesheet" href="/css/Data-Table.css">
  <link rel="stylesheet" href="/css/Footer-Dark-icons.css">
  <link rel="stylesheet" href="https://cdn.datatables.net/1.10.15/css/dataTables.bootstrap.min.css">
  <link rel="stylesheet" href="/css/Login-Form-Basic-icons.css">
  <link rel="stylesheet" href="/css/Soft-UI-Aside-Navbar.css">
  <link rel="stylesheet" href="/css/dropdown.css">
  <link rel="icon" type="image/x-icon" href="/img/favicon.ico">
  <script src="https://unpkg.com/axios@1.4.0"></script>
  <script src="https://unpkg.com/vue@next"></script>
</head>

<body>
  <%- include("includes/navbar.ejs") %>
  <div class="container py-4 py-xl-5">
    <h4>Reservations</h4>
    <table id="reservations" class="table table-striped table-bordered" >
      <thead>
        <tr>
          <th>User</th>
          <th>Book</th>
          <th>Date</th>
          <th>Date Due</th>
          <th>Manage</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% reservations.forEach(reservation=> { %>
        <tr >
          <td>
            <%= reservation.real_name %>
          </td>
          <td>
            <%= reservation.title %>
          </td>
          <td>
            <%= reservation.date.toISOString().split("T")[0] %>
          </td>
          <td>
            <%= reservation.date_due.toISOString().split("T")[0] %>
          </td>
          <td>
            <form name="acceptForm" method="POST" action="/reservations/manage/accept/<%=reservation.book_id%>/<%=reservation.user_id%>">
              <input type="hidden">
              <button class="btn btn-primary ms-md-2" role="button" type="submit" style="--bs-btn-bg: #49cc0b;--bs-btn-border-color: #0ead26;--bs-btn-hover-color: #000000;--bs-btn-hover-bg: #089627;--bs-btn-hover-border-color: #127d37;">Accept</button>
            </form>
          </td>
          <td>
            <form name="denyForm" method="POST" action="/reservations/manage/deny/<%=reservation.book_id%>/<%=reservation.user_id%>">
              <input type="hidden">
              <button class="btn btn-primary ms-md-2" role="button" type="submit" style="--bs-btn-bg: #ff1c1c;--bs-btn-border-color: #fc2f2f;--bs-btn-hover-color: #000000;--bs-btn-hover-bg: #962408;--bs-btn-hover-border-color: #7d1212;">Deny</button>
            </form>
          </td>
          </tr>
        <% }); %>
      </tbody>
    </table>
  </div>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>