<div v-if="book" v-bind:class="reviewBookPanel">
    <div class="dialog">
      <div class="main-body">
        <button class="btn-close" type="button" aria-label="Close" @click="closeDialog('review')" style="margin-bottom: 7px;"></button>
        <nav aria-label="breadcrumb" class="main-breadcrumb"></nav>
        <div class="row gutters-sm">
          <div class="col-md-4 mb-3">
            <div class="card">
              <div class="card-body">
                <div class="text-center d-flex flex-column align-items-center"><img v-bind:src="book.picture" alt="Admin" width="163" height="250">
                  <div class="mt-3">
                    <h4>
                      {{ book.title }}
                    </h4>
                    <p class="text-secondary mb-1">
                      {{ book. description }}
                    </p>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <div class="col-md-8">
            <div class="card mb-3">
              <div class="card-body">
                <div class="wrap">
                      <label class="statement">You liked this book and you would recommend it to others.</label>
                      <ul class='likert'>
                        <li>
                          <input type="radio" name="likert" v-model="rating" value="5">
                          <label>Strongly agree</label>
                        </li>
                        <li>
                          <input type="radio" name="likert" v-model="rating" value="4">
                          <label>Agree</label>
                        </li>
                        <li>
                          <input type="radio" name="likert" v-model="rating" value="3">
                          <label>Neutral</label>
                        </li>
                        <li>
                          <input type="radio" name="likert" v-model="rating" value="2">
                          <label>Disagree</label>
                        </li>
                        <li>
                          <input type="radio" name="likert" v-model="rating" value="1">
                          <label>Strongly disagree</label>
                        </li>
                      </ul>
                      </div>
              </div>
            </div>
            <div class="card mb-3">
                <div class="card-body">
                    <label class="statement">Tell us your opinion. (Optional)</label>
                    <textarea class="form-control" v-model="review" rows="5"></textarea>
                </div>
              </div>
              <div style="float: right;">
              <button class="btn btn-primary btn-block" @click="reviewBook(book.id)">Submit</button>
            </div>
            <p class="text-secondary">{{ message }}</p>
          </div>
        </div>
      </div>
    </div>
  </div>